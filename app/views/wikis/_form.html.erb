<%= form_for @wiki, html: { class: "wiki_form" } do |f| %>
  <% if @wiki.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wiki.errors.count, "error") %> prohibited this wiki from being saved:</h2>
      <ul>
        <% @wiki.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, class: 'sr-only' %><br>
    <%= f.text_field :title, autofocus: true, placeholder: 'Type your title here' %>
  </div>
  <div class="field form-group">
    <%= f.label :body, class: 'sr-only' %><br>
    <%= f.text_area :body, rows: 7, placeholder: 'Share what you know.' %>
  </div>
  <div class="field form-group">
    <%= f.check_box :private %>
    <%= f.label :private %>
  </div>
  <div class="actions form-group pull-right">
    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
      <span class="glyphicon glyphicon-ok-circle"></span> Save Wiki
    <% end %>
  </div>
<% end %>

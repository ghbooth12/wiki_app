<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1 class="text-center">Compose new Wiki</h1>
      <p class="pull-right">- share your information with the world</p>
      <br>
    </div>

    <%= render 'form' %>

    <%= link_to 'Back to list', wikis_path, class: 'btn btn-default' %>
  </div>
</div>

<script type="text/javascript">
  var editor = new EpicEditor().load();
  // To make 'edit box' empty on the wiki 'new' page
  // Without this code, epiceditor holds onto a previous content
  editor.getElement('editor').body.innerHTML='';
</script>
